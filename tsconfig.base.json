{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ES2020", "DOM"],
        "sourceMap": true,

        "moduleResolution": "node",
        "esModuleInterop": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "noImplicitAny": false,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "strict": true
    },
    "exclude": [
        "node_modules", 
        "tmp"
    ]
}
