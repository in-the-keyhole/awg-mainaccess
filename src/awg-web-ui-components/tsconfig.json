{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist/out-tsc",
        "jsx": "react-jsx",
        "allowJs": false,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "types": [
            "vitest/importMeta"
        ]
    },
    "exclude": [
        "jest.config.ts",
        "**/*.spec.ts",
        "**/*.test.ts",
        "**/*.spec.tsx",
        "**/*.test.tsx",
        "**/*.spec.js",
        "**/*.test.js",
        "**/*.spec.jsx",
        "**/*.test.jsx"
    ],
    "include": [
        "src/**/*.js",
        "src/**/*.jsx", 
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}
